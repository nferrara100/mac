# Some aliases credit: https://github.com/alrra/dotfiles/blob/main/src/git/gitconfig

# shellcheck disable=SC1020,SC1035,SC1072,SC1073
[alias]
    a = add

    b = branch

    bd = branch -D

    # Delete branch $1 locally and remotely
    bdr = !git push origin -d "$1" && git branch -D "$1"

    c = commit -v -m

    ca = commit -v --amend

    co = checkout

    cb = checkout -b

    credit = !bash -c 'source ~/projects/mac/linked/git_functions.sh && credit "$0" "$@"'

    credit-co = !bash -c 'source ~/projects/mac/linked/git_functions.sh && credit-co-author "$0" "$@"'

    d = diff -- . ':!*package-lock.json' ':!*yarn.lock'

    delete-branches = !bash -c 'source ~/projects/mac/linked/git_functions.sh && delete-branches "$0" "$@"'

    # Display last commit
	last = log -1 HEAD --stat

    # Log with a prettier, more condensed format
	ll = log --graph --pretty=colorful --abbrev-commit

    # List contributors
    lc = shortlog --email --numbered --summary

    p = push

    pf = push --force-with-lease

    r = rebase

    ra = rebase --abort

    rc = rebase --continue

    ro = !bash -c 'source ~/projects/mac/linked/git_functions.sh && reset-to-origin "$0" "$@"'

    ir = !bash -c 'source ~/projects/mac/linked/git_functions.sh && interactive-rebase "$0" "$@"'

    rename-branch = !bash -c 'source ~/projects/mac/linked/git_functions.sh && rename-branch "$0" "$@"'

    retag = !bash -c 'source ~/projects/mac/linked/git_functions.sh && retag "$0" "$@"'

    rlc = !bash -c 'source ~/projects/mac/linked/git_functions.sh && remove-last-commits "$0" "$@"'

    s = status

    sc = !bash -c 'source ~/projects/mac/linked/git_functions.sh && search-for-commits "$0" "$@"'

    sm = !bash -c 'source ~/projects/mac/linked/git_functions.sh && search-for-message "$0" "$@"'

    ss = !bash -c 'source ~/projects/mac/linked/git_functions.sh && search-for-snippet "$0" "$@"'

    start= !bash -c 'source ~/projects/mac/linked/git_functions.sh && start "$0" "$@"'

    # Update last commit (amend without editing message)
    u = commit -v --amend --no-edit

    # Update last commit with all local changes (add all and amend without editing)
	ua = !git add --all && git commit -v --amend --no-edit

    ulc = !bash -c 'source ~/projects/mac/linked/git_functions.sh && undo-last-commits "$0" "$@"'

    # Undo adding all files for next commit
	unstage = reset HEAD --

[pretty]
    colorful = "%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset"
    #               │                    │         │           │                  └─ author name
    #               │                    │         │           └─ date (relative)
    #               │                    │         └─ message
    #               │                    └─ decorations (branch, heads or tags)
    #               └─ hash (abbreviated)
