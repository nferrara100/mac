{
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "[shellscript]": {
        "editor.defaultFormatter": "mkhl.shfmt"
    },
    "application.shellEnvironmentResolutionTimeout": 60,
    "breadcrumbs.enabled": true,
    "comment-divider.length": 88,
    "comment-divider.shouldLengthIncludeIndent": true,
    "css.lint.duplicateProperties": "warning",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.accessibilitySupport": "off",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.fontFamily": "Menlo, Monaco, 'Courier New'",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.guides.bracketPairs": true,
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.minimap.maxColumn": 88,
    "editor.rulers": [
        88
    ],
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "on",
    "editor.wordWrap": "off",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.excludeGitIgnore": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "flake8.args": [
        "--ignore=E501"
    ],
    "git.autoStash": true,
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.fetchOnPull": true,
    "git.openRepositoryInParentFolders": "never",
    "git.showPushSuccessNotification": true,
    "github.copilot-labs.showBrushesLenses": true,
    "github.copilot-labs.showTestGenerationLenses": true,
    "github.copilot.enable": {
        "*": true,
        "markdown": true,
        "plaintext": true,
        "yaml": true
    },
    "gitlens.gitCommands.closeOnFocusOut": true,
    "go.toolsManagement.autoUpdate": true,
    "html.format.indentHandlebars": true,
    "html.format.indentInnerHtml": true,
    "html.format.preserveNewLines": false,
    "isort.args": [
        "--profile",
        "black"
    ],
    "javascript.updateImportsOnFileMove.enabled": "always",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "prettier.bracketSpacing": false,
    "prettier.endOfLine": "lf",
    "prettier.printWidth": 88,
    "prettier.proseWrap": "always",
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "all",
    "python.analysis.autoFormatStrings": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.diagnostics.sourceMapsEnabled": true,
    "python.languageServer": "Pylance",
    "python.linting.banditEnabled": true,
    "python.linting.enabled": true,
    "python.testing.pytestEnabled": true,
    "python.venvPath": "~/virtualenvs/",
    "pythonTestExplorer.testFramework": "pytest",
    "pythonTestExplorer.testplanEnabled": true,
    "redhat.telemetry.enabled": true,
    "search.exclude": {
        ".git/": true,
        "coverage/": true,
        "node_modules/": true
    },
    "search.showLineNumbers": true,
    "search.smartCase": true,
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.env.osx": {
        "FIG_NEW_SESSION": "1"
    },
    "terminal.integrated.fontFamily": "Menlo, Monaco, 'Courier New'",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontWeight": "300",
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.showExitAlert": false,
    "terminal.integrated.tabs.enabled": true,
    "typescript.format.insertSpaceAfterTypeAssertion": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "window.closeWhenEmpty": true,
    "window.newWindowDimensions": "maximized",
    "window.zoomLevel": 1,
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    }
}
